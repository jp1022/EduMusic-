<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.hci.edumusic" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <!--android:debuggable="true"-->

        <!-- Main Page -->
        <activity
            android:name=".MainActivity"
        android:label="@string/app_name" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <!-- Beats -->
        <activity
            android:name=".BeatsActivity"/>
        <activity android:name=".BeatsFeedback"/>
        <activity
            android:name=".BeatsLevelActivity"/>
        <!-- Pitch -->
        <activity
            android:name=".PitchActivity"/>
        <activity android:name=".PitchLevelActivity" />
        <activity android:name=".PitchFeedback" />

        <!-- Store -->
        <activity
            android:name=".StoreActivity"/>
        <!-- Disabled -->
        <activity
            android:name=".DisabledActivity"/>
        <!-- Drum -->
        <activity
            android:name=".DrumActivity"/>
        <!-- Piano -->
        <activity
            android:name=".PianoActivity"/>
        <!-- Kazoo -->
        <activity
            android:name=".KazooActivity"/>

        <!-- My Instruments -->
        <activity
            android:name=".InstruActivity"/>
    </application>

</manifest>
