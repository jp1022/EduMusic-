<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".InstrumentActivity">

    <!-- User profile -->

    <android.hci.edumusic.PersonView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Instruments"
        android:id="@+id/instr_title"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuba"
        android:id="@+id/inst_tuba"
        android:layout_below="@+id/instr_title"
        android:layout_toStartOf="@+id/instr_title"
        android:onClick="disabled"
        android:layout_marginTop="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cymbal"
        android:id="@+id/inst_cymbal"
        android:layout_alignTop="@+id/inst_tuba"
        android:onClick="disabled"
        android:layout_toEndOf="@+id/instr_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:id="@+id/go_store"
        android:onClick="goStore"
        android:layout_alignStart="@+id/inst_cymbal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banjo"
        android:id="@+id/inst_banjo"
        android:onClick="disabled"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/inst_tuba" />

</RelativeLayout>