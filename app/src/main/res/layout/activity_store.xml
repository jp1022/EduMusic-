<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StoreActivity">

    <!-- User profile -->

    <android.hci.edumusic.PersonView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Store"
        android:id="@+id/instr_title"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drum"
        android:id="@+id/inst_tuba"
        android:layout_toStartOf="@+id/instr_title"
        android:onClick="goDrum"
        android:layout_above="@+id/inst_banjo"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piano"
        android:id="@+id/inst_cymbal"
        android:onClick="goPiano"
        android:layout_toEndOf="@+id/instr_title"
        android:layout_above="@+id/go_store"
        android:layout_alignEnd="@+id/view" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Instruments"
        android:id="@+id/my_inst"
        android:onClick="goInstrument"
        android:layout_alignTop="@+id/view"
        android:layout_alignEnd="@+id/view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Egg"
        android:id="@+id/go_store"
        android:onClick="disabled"
        android:layout_below="@+id/inst_tuba"
        android:layout_alignEnd="@+id/view"
        android:layout_toEndOf="@+id/instr_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guitar"
        android:id="@+id/buy_guitar"
        android:onClick="disabled"
        android:layout_toEndOf="@+id/instr_title"
        android:layout_alignTop="@+id/buy_trombone"
        android:layout_alignEnd="@+id/view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didgeridoo"
        android:id="@+id/inst_banjo"
        android:onClick="goKazoo"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/inst_tuba"
        android:layout_alignEnd="@+id/inst_tuba" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trombone"
        android:id="@+id/buy_trombone"
        android:onClick="disabled"
        android:layout_below="@+id/inst_banjo"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/inst_banjo" />

</RelativeLayout>
