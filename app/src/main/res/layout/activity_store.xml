<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StoreActivity"
    android:background="#ffffffff">

    <!-- Notes -->
    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="150"
        android:id="@+id/notes"
        android:layout_alignParentStart="true"
        android:background="@layout/notes_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Store"
        android:gravity="center"
        android:id="@+id/instr_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drum"
        android:id="@+id/inst_drum"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:onClick="goDrum"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piano"
        android:id="@+id/inst_piano"
        android:onClick="goPiano"
        android:layout_marginTop="120dp"
        android:layout_alignParentEnd="true"
        android:background="@layout/button_border"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Instruments"
        android:id="@+id/my_inst"
        android:onClick="goInstrument"
        android:layout_alignParentRight="true"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Egg"
        android:id="@+id/inst_egg"
        android:onClick="disabled"
        android:layout_marginTop="200dp"
        android:layout_alignParentEnd="true"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guitar"
        android:id="@+id/inst_guitar"
        android:onClick="disabled"
        android:layout_marginTop="280dp"
        android:layout_alignParentEnd="true"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didgeridoo"
        android:id="@+id/inst_dig"
        android:onClick="goDig"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trombone"
        android:id="@+id/inst_trombone"
        android:onClick="disabled"
        android:layout_alignParentStart="true"
        android:layout_marginTop="280dp"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="Back"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="toMain"
        android:background="@layout/back_border"/>

</RelativeLayout>
