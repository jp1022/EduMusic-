<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- User profile -->

    <android.hci.edumusic.PersonView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <!-- Top Row -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beats"
        android:id="@+id/beatsButton"
        android:layout_marginTop="120dp"
        android:onClick="goBeats" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gig"
        android:id="@+id/gigButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:onClick="disabled" />

    <!-- Middle Row -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:id="@+id/pitchButton"
        android:layout_marginTop="200dp"
        android:onClick="goPitch"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:id="@+id/triviaButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:onClick="disabled" />


    <!-- Bottom Row -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:id="@+id/storeButton"
        android:layout_marginTop="280dp"
        android:onClick="goStore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="280dp"
        android:onClick="disabled" />



</RelativeLayout>
