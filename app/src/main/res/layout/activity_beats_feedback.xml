<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BeatsLevelActivity"
    android:background="#ffffffff">

    <!-- User profile -->

    <android.hci.edumusic.PersonView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <!-- Text and Instructions -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_text"
        android:text="Correct!"
        android:textSize="50sp"
        android:layout_alignTop="@+id/view"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Level"
        android:id="@+id/to_main"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentStart="true"
        android:onClick="mainMenu"
        android:layout_marginBottom="30dp"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beat Level"
        android:id="@+id/beat_lvl"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:onClick="beatLevelSelect"
        android:background="@layout/button_border"/>


</RelativeLayout>