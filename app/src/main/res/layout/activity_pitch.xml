<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PitchActivity"
    android:background="#ffffffff">

    <!-- User profile -->

    <android.hci.edumusic.PersonView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:id="@+id/pitch_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:id="@+id/pitchOne"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:onClick="pitchLesson"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 3"
        android:id="@+id/pitchThree"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:onClick="pitchLesson"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 5"
        android:id="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="280dp"
        android:onClick="disabled"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 2"
        android:id="@+id/pitchTwo"
        android:onClick="pitchLesson"
        android:layout_marginTop="120dp"
        android:layout_alignParentEnd="true"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 4"
        android:id="@+id/button4"
        android:onClick="disabled"
        android:layout_marginTop="200dp"
        android:layout_alignParentEnd="true"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 6"
        android:id="@+id/button6"
        android:onClick="disabled"
        android:layout_marginTop="280dp"
        android:layout_alignParentEnd="true"
        android:background="@layout/button_border"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="Back"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="toMain"
        android:background="@layout/back_border"/>


</RelativeLayout>