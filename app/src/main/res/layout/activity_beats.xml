<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".BeatsActivity"
    android:background="#ffffffff">

    <!-- User profile -->

    <android.hci.edumusic.PersonView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beats"
        android:id="@+id/beat_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"/>

    <!-- Top Row -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:id="@+id/beatsOne"
        android:layout_marginTop="120dp"
        android:onClick="beatsLesson"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 2"
        android:id="@+id/beatsTwo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:onClick="beatsLesson"
        android:background="@layout/button_border"/>

    <!-- Middle Row -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 3"
        android:id="@+id/beatsThree"
        android:layout_marginTop="200dp"
        android:onClick="beatsLesson"
        android:background="@layout/button_border"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 4"
        android:id="@+id/beatsFour"
        android:layout_marginTop="200dp"
        android:layout_alignParentRight="true"
        android:onClick="disabled"
        android:background="@layout/button_border"/>


    <!-- Bottom Row -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 5"
        android:id="@+id/beatsFive"
        android:layout_marginTop="280dp"
        android:onClick="disabled"
        android:background="@layout/button_border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 6"
        android:id="@+id/beatsSix"
        android:layout_alignParentRight="true"
        android:layout_marginTop="280dp"
        android:onClick="disabled"
        android:background="@layout/button_border"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="Back"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="toMain"
        android:background="@layout/back_border"/>

</RelativeLayout>