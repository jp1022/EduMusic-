<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".BeatsActivity">

    <!-- User profile -->

    <android.hci.edumusic.PersonView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <!-- Top Row -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level One"
        android:id="@+id/beatsOne"
        android:layout_marginTop="120dp"
        android:onClick="beatsLesson" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Two"
        android:id="@+id/beatsTwo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:onClick="beatsLesson" />

    <!-- Middle Row -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Three"
        android:id="@+id/beatsThree"
        android:layout_marginTop="200dp"
        android:onClick="beatsLesson"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Four"
        android:id="@+id/beatsFour"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:onClick="disabled" />


    <!-- Bottom Row -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Five"
        android:id="@+id/beatsFive"
        android:layout_marginTop="280dp"
        android:onClick="goStore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Six"
        android:id="@+id/beatsSix"
        android:layout_alignParentRight="true"
        android:layout_marginTop="280dp"
        android:onClick="disabled" />

</RelativeLayout>